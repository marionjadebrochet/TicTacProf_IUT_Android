    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_j1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joueur 1:"
            android:textColor="#E4B9B9"
            android:textSize="40sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/point_j1"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/bouton_recommencer"
            android:text="0"
            android:textColor="#E4B9B9"
            android:textSize="40sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/point_j2"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="3dp"
            android:layout_toStartOf="@+id/bouton_musique"
            android:text="0"
            android:textColor="#E4B9B9"
            android:textSize="40sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/text_view_j2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_j1"
            android:text="Joueur 2:"
            android:textColor="#E4B9B9"
            android:textSize="40sp"
            android:textStyle="bold"></TextView>

        <Button
            android:id="@+id/bouton_recommencer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:backgroundTint="#DFC2C2"
            android:text="Recommencer"
            android:textColor="#4E6373"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/bouton_musique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="36dp"
            android:backgroundTint="#DFC2C2"
            android:onClick="jouerMusique"
            android:text="@string/jouer_musique_bouton"
            android:textColor="#4E6373"
            android:textStyle="bold"></Button>

    </RelativeLayout>

